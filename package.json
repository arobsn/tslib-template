{
  "name": "@arobsn/tslib-template",
  "version": "0.0.1",
  "description": "A modern and minimal TypeScript library template",
  "author": "Alison Oliveira <arobsn@proton.me>",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "homepage": "https://github.com/arobsn/tslib-template#readme",
  "bugs": {
    "url": "https://github.com/arobsn/tslib-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arobsn/tslib-template.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "format:check": "biome check --linter-enabled=false",
    "format:fix": "biome check --linter-enabled=false --write",
    "lint:check": "biome lint",
    "lint:fix": "biome lint --write",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:coverage:json": "vitest --run --coverage --reporter=json"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@types/node": "^24.0.3",
    "@vitest/coverage-istanbul": "^3.2.4",
    "tsdown": "^0.12.8",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "library",
    "starter",
    "template",
    "boilerplate",
    "tslib",
    "ts",
    "es6",
    "esm",
    "modern",
    "minimal"
  ]
}
